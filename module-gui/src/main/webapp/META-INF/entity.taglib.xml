        </attribute>
        <attribute>
            <name>entityName</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>entityColor</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>entityIcon</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
    </tag>
    
    <tag>
        <tag-name>entity_badge</tag-name>
        <source>tags/io/goobi/entity_badge.xhtml</source>
        <attribute>
            <name>styleclassname</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>fieldname</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>showfield</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
       
